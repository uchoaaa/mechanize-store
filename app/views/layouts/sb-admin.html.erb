<html>
<head>
	<meta http-equiv="Content-type" content="text/html; charset=utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

	<%= stylesheet_link_tag    "mechanize_store/sb-admin" %>
	<%= javascript_include_tag "mechanize_store/sb-admin" %>

	<title><%= yield :title %></title>

</head>
<body>

	<div id="wrapper">
		<!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
       <!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="javascript:;">MechanizeStore</a>
			</div>

			<!-- Top Menu Items -->
			<ul class="nav navbar-right top-nav">
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> John Smith <b class="caret"></b></a>
					<ul class="dropdown-menu">
						<li><a href="#"><i class="fa fa-fw fa-user"></i> Profile</a></li>
						<li class="divider"></li>
						<li><a href="#"><i class="fa fa-fw fa-power-off"></i> Log Out</a></li>
					</ul>
				</li>
			</ul>

			<div class="collapse navbar-collapse navbar-ex1-collapse">
				<ul class="nav navbar-nav side-nav">
					<%= common_menu 'Dashboard', 			dashboard_path, icon: :dashboard, menu: :dashboard %>
					<%= common_menu 'Compras',				orders_path, icon: 'shopping-cart', menu: :orders %>
					<%= common_menu 'Clientes', 			'#', icon: :users,	menu: :clients  %>
					<%= common_menu 'Financeiro', 		'#', icon: :money, 	menu: :finance  %>
					<%= common_menu 'Produtos', 			products_path, icon: :cubes,	menu: :products %>
					<%= common_menu 'Configurações',	'#', icon: :cogs,		menu: :configs do %>
						<% common_sub_menu 'Categoria de produtos', product_categories_path %>
						<% common_sub_menu 'Seção de produtos', 		product_sections_path   %>
					<% end %>
				</ul>
			</div>
       <!-- /.navbar-collapse -->
    </nav>
    
		<!-- Page content -->
		<div id="page-wrapper">
			<div class="container-fluid">
				<%= yield %>
			</div>
			<!-- /.container-fluid -->
	</div>
	<!-- /#wrapper -->
</body>
</html>